<?xml version='1.0' ?>

<launch>
  <arg name="gazebo_version" default="11"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="headless" default="False"/>

  <!-- navigation launch -->
  <include file="$(find-pkg-share nav2_bringup)/launch/tb3_simulation_launch.py">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="headless" value="$(var headless)"/>
  </include>

  <!-- Turtlebot3 fleet adapter -->
  <group>
    <include file="$(find-pkg-share fleet_adapter_turtlebot3)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share rmf_demos_maps)/maps/glhd/nav_graphs/0.yaml" />
      <arg name="config_file" value="$(find-pkg-share fleet_adapter_turtlebot3)/config/glhd/turtlebot3_config.yaml"/>
    </include>
  </group>

</launch>
